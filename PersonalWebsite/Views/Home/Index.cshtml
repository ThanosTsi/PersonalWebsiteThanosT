@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Thanos's Website</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="accordion" id="accordionExample">
    <h2>Planning to Add</h2>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                League of Legends game stats page
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
            <div class="accordion-body">
                Planning to add:
                <ol class="list-group list-group-numbered">
                    <li class="list-group-item">API Call</li>
                    <li class="list-group-item">Graph with rank change over time</li>
                    <li class="list-group-item">Top 5 picked champs with winrate</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Track some stock market changes based on politicians activities
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Planning to add:
                <ol class="list-group list-group-numbered">
                    <li class="list-group-item">API Call</li>
                    <li class="list-group-item">Daily List of activity</li>
                </ol>
            </div>
        </div>
    </div>
